.chat-side
	.chat-side__side-header
		.chat-side__side-header__box
			.chat-side__side-header__box__user-name
				= current_user.name
			%ul.chat-side__side-header__box__menu
				%li.chat-side__side-header__box__menu__edit-user
					= link_to new_group_path, class: "chat-side__side-header__box__menu__edit-user__link" do
						= icon("fas", "edit")
				%li.chat-side__side-header__box__menu__new-group
					= link_to edit_user_path(current_user), class: "chat-side__side-header__box__menu__new-group__link" do
						= icon("fas", "cog")
	.chat-side__groups
		.chat-side__groups__list
			.chat-side__groups__list__name
				- current_user.groups.each do |group|
					= group.name
